<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-4 h4">
    <%= image_tag @user.avatar.variant(resize_to_limit: [200, 200]), style: "border-radius: 100%"  if @user.avatar.present?%>
    <%= @user.full_name %>
  </div>
  <div class="col-md-4">
  </div>
  <div class="col-md-3"></div>
</div>
<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-2 text-center">
    <%= link_to 'Refresh My Games', user_synchronize_games_path(current_user), method: :put, class: "btn btn-warning" if current_user.id == @user.id%>
  </div>
  <div class="col-md-6">
  </div>
  <div class="col-md-3"></div>
</div>

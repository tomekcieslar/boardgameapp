<div class="container">
  <h1><%= @user.username %> collection</h1>
  <div class="col-md-12 mt-3">
    <%= form_tag(user_games_path, method: :get)  do %>
      <div class="row">
        <%= text_field_tag  :search, params[:search], class: "form-control col-md-9"%>
        <%= submit_tag "Search", class: "btn btn-outline-secondary col-md-3"%>
      </div>
    <% end %>
  </div>
  <div class="col-md-12">
    <table class="table table-striped text-center">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Players</th>
          <th>Time</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%= @games.find_each do |game| %>
          <tr>
            <td><%= image_tag game.thumbnail.variant(resize_to_limit: [40, 40]) %></td>
            <td><%= game.title %></td>
            <td><%= "#{game.min_players} - #{game.max_players}" %></td>
            <td><%= game.real_time %></td>
            <td> <%= link_to 'Show', game_path(game), class: "btn btn-outline-warning" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
